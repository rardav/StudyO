{
  "Routes": [
    // Catalog
    {
      "DownstreamPathTemplate": "/api/Courses",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Courses",
      "UpstreamHttpMethod": [
        "GET",
        "POST"
      ]
    },
    {
      "DownstreamPathTemplate": "/api/Courses/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Courses/{id}",
      "UpstreamHttpMethod": [
        "GET",
        "PUT",
        "DELETE"
      ]
    },
    // Classes
    {
      "DownstreamPathTemplate": "/api/Classes/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "classes.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Classes/{id}",
      "UpstreamHttpMethod": [
        "GET",
        "PUT",
        "DELETE"
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}